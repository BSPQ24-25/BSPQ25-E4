name: Build and Deploy Doxygen

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  test-and-deploy:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pages: write
      id-token: write
    environment:
      name: github-pages

    steps:
      - name: ğŸ“¥ Checkout the repository
        uses: actions/checkout@v3
        with:
          fetch-depth: 0

      - name: â˜• Set up Java 17
        uses: actions/setup-java@v3
        with:
          java-version: '17'
          distribution: 'temurin'

      - name: ğŸ§± Cache Maven dependencies
        uses: actions/cache@v3
        with:
          path: ~/.m2
          key: ${{ runner.os }}-maven-${{ hashFiles('**/pom.xml') }}
          restore-keys: |
            ${{ runner.os }}-maven-

      - name: ğŸ§ª Run tests
        run: mvn test

      - name: ğŸ›  Install Doxygen
        run: sudo apt-get install -y doxygen graphviz

      - name: ğŸ“„ Generate Doxygen documentation
        run: doxygen Doxyfile

      - name: ğŸ“¦ Upload GitHub Pages artifact
        uses: actions/upload-pages-artifact@v2
        with:
          path: ./docs/html  # AsegÃºrate de que aquÃ­ estÃ¡ tu index.html

      - name: ğŸš€ Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v2
